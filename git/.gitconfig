[credential]
	helper = osxkeychain
	username = maxdarling
[user]
	name = Max Darling
	email = maxdarling11@gmail.com
[push]
	default = simple
    autoSetupRemote = true
[branch]
	autosetuprebase = always

# delta for diffs
[core]
    pager = delta
[interactive]
    diffFilter = delta --color-only
[delta]
    navigate = true  # use n and N to move between diff sections
    ; dark = true      # or light = true, or omit for auto-detection
    side-by-side = true
    ; syntax-theme = GitHub
[merge]
    conflictStyle = zdiff3
[include]
    path = ~/code/dotfiles/git/delta-themes.gitconfig

[alias]
    graph = log --all --graph --decorate --oneline

# for work
[includeIf "gitdir:~/work/"]
    path = ~/work/.gitconfig
